footer {
    background: lighten(black,20);
    padding-top: 30px;
    z-index: -1;
    position: absolute;
    width: 100%;
    img {
        height: 250px;
        margin-top: -30px;
        margin-bottom: -60px;
    }
    section {
        display:flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        ul {
            display: inline-flex;
            margin-bottom: 2em;
            li {
                border: 1px solid white;
                border-radius: 10px;
                font-size: 1.5em;
                color: white;
                padding: 10px;
                margin: 1em 0.15em;
                transition: .5s;
                &:hover {
                    background-color: grey;
                    border-color: grey;
                }
            }
        }
    }
    section:last-child {
        .diamond_icon {
            font-size: 3em;
            margin-top: -50px;
            margin-bottom: 30px;
            text-shadow: 1px 1px #000000, 
                         2px 2px #000000, 
                         3px 3px #000000;
        }
        background: black;
        height: 100px;
        color: white;
    }
}