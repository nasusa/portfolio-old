body {
  background: white;
  background-size: cover; 
  font-family: 'Open Sans Condensed', sans-serif;
  color: $black;
}
h1, h2, h3, h4, h5, h6 {
    margin-bottom: .5rem;
    font-family: inherit;
    font-weight: 500;
    line-height: 1.1;
    color: inherit;
    //text-transform: uppercase;
}
h1 {
    font-size: 2.5em;
}
h2 {
    font-size: 2em;
}
h3 {
    font-size: 1.75em;
}
h4 {
    font-size: 1.5em;
}
h5 {
    font-size: 1.25em;
}
h6 {
    font-size: 1rem;
}
em {
  font-style: italic;
}
b, strong {
    font-weight: 700;
}
small {
  font-size: 75%;
}
a {
  color: inherit;
  text-decoration: none;
}
hr {
  border: 0;
	border-top: 1px solid #B6B6B6;
  width: 100%;
}
img {
    max-width: 100%;
    height: auto;
}
.text-lowercase {
    text-transform: lowercase!important;
}
.text-uppercase {
    text-transform: uppercase!important;
}
.text-capitalize {
    text-transform: capitalize!important;
}
.back-to-top {
  position: fixed;
  bottom: 1em;
  right: 1em;
  display: inline-block;  
  color: $bluetrans;
  font-size: 1.5em;
  +mobile() {
    bottom: 0.5em;
    right: 0.5em;
  }
  &:hover{
    cursor: pointer;
    color: #212121;
  }
}
.container{
    lost-center: 1170px;
    lost-utility:  clearfix;
}
.containerbox{
    lost-center: 1170px;
    lost-utility:  clearfix;
    margin-top: -40px;
    background: white;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    border-radius: 25px;
    color: black;
    height:500px;
    padding:30px;
}
.third {
    lost-column: 1/3;
    height:100px;
    background:blue;
}