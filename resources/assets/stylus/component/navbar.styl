nav {
    line-height: $navbarkorkeus = 90px;
    height: $navbarkorkeus;
    background: alpha(black,.7);
    position: absolute;
    z-index: 999;
    width: 100%;
    div {
        text-align: center;
        &:first-child {
            lost-column: 1/4;
            color: white;
        }
        &:nth-child(2) {
            lost-column: 2/4;
            color: white;
            font-size: 1.5em;
            a:hover {
                text-decoration: underline;
            }
            ul {
                display: inline-flex;
                li {
                    margin: 0 10px;
                }
            }
        }
        &:last-child {
            lost-column: 1/4;
            color: white;
            font-size: 1em; 
            ul {
                display: inline-flex;
                li {
                    margin: 0 5px;
                }
            }
        }
    }
}