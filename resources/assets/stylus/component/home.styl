.mainhero {
    height: 500px;
    position: relative;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center 50%;
    z-index: -1;
    background-image: url(/images/forest.jpg);
    animation: slider-lg ease-in-out 10s both infinite; 
}

.padding {
    margin: auto;
    width: 60%;
    height:100%;
}

.content {
    height: 100%;
    font-size: 3em;
    display: -webkit-flex;
    -webkit-align-items: center;
    align-items: center;
    -webkit-justify-content: center;
}
.pacifico {
    font-family: 'Pacifico', cursive;
    color: white;
    text-shadow: 1px 1px #000000, 
                2px 2px #000000, 
                3px 3px #000000;
}
.pacificoh2 {
    font-family: 'Pacifico', cursive;
    color: black;
}
figure figcaption {
    text-align: center;
    font-size: 1.5em;
    color: black;
    margin: 1.5em;
    .header {
        margin-bottom:5px;
        font-weight: bold;
    }
}
.kuvaboksi { 
    .third img {
        height: 250px;
    }
    .second img {
        height: 350px;
    }
}

.headerimg {
    width: 200px;
    height: 200px;
    border-radius:50%;
    box-shadow: 0 5px 9px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

    +mobile() {
        background-position: center bottom;
    } 


@keyframes slider-lg {
  0% {
    background-image: url(/images/forest.jpg); 
  }
  50% {
    background-image: url(/images/city.jpg); 
  }
  100% {
    background-image: url(/images/forest.jpg);
  } 
}