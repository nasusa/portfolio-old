//WHAT IM GOOD AT
$skillikorkeus = 50px;
.skill {
    margin: 4em 0;
    font-size: 1.2em;
}
.skill li {
    margin-bottom: 50px;
    -webkit-border-radius: 3px 3px 3px 3px;
    background: #dddddd;
    border-radius: 15px;
    height: $skillikorkeus;
    position: relative;
}
.skill li span {
    background-color: #555555;
    border-radius: 15px;
    color: white;
    height: $skillikorkeus;
    position: absolute;
    padding-left: 15px;
    line-height: $skillikorkeus;
}

